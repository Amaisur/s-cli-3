
    <style>

        *{
            padding: 0;
            margin: 0;
            box-sizing: border-box;
        }
        .main-collection-20{
            width: 100%;
            margin: 30px 0;
            padding: 20px 0;
        }
        .inner-collection-20{
            width: 90%;
            margin: 0 auto !important;
        }
        .row-collection-20{
            display: flex;
            justify-content: center;
            align-items: flex-start;
            gap: 20px;
            position: relative;
        }
        .c-20-col{
            width: 50%;
            border-radius: 20px;
        }
        .collection-20-col-fix{
            position: sticky;
            left: 0;
            top: 5vh;
            max-height: 90vh;
            overflow: hidden;
        }
        .text-20-fix{
            position: absolute;
            width: 80%;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%);
            background: rgba(255, 255, 255, .7);
            padding: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
        }
        .collection-20-col-scroll{
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            gap: 50px;     
        }
        .po-20-c{
            position: relative;
            height: 100%;
        }
        .img-20-fix{
            height: 100%;
            width: 100%;
        }
        .img-20-fix img{
            width: 100%;
            height: 100%;
            object-fit: contain;
        }
        .main-20-product{
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            gap: 30px;
            width: 80%;
            margin: 0 auto !important;
        }
        .img-20-product{
            width: 100%;
            overflow: hidden;
            border-radius: 10px;
        }
        .img-20-product img{
            height: 100%;
            width: 100%;
            object-fit: cover;
        }
    </style>
    
    <div class="main-collection-20">
        <div class="inner-collection-20">
            {% assign collection = section.settings.collection %}
            <div class="row-collection-20">
                <div class="collection-20-col-fix c-20-col">
                    <div class="po-20-c">
                    <div class="img-20-fix">
                        <img src="{{ collection.featured_image |  img_url: 'master' }}" alt="">
                        </div>
                    <div class="text-20-fix">
                        <h1> {{collection.title}} </h1>
                        <p> {{ collection.description }} </p>
                        <a href="{{ collection.url }}">SHOP ALL PRODUCTS</a>
                    </div>
                    </div>
                </div>
                <div class="collection-20-col-scroll c-20-col">
                    {% for product in collection.products %}
                        <div class="main-20-product">
                            <div class="img-20-product">
                                <img src="{{ product.featured_image |  img_url: 'master' }}" alt="">
                            </div>
                            <div class="content-20-product">
                                <h3> {{product.title}} </h3>
                                <div class="price-20">
                                    <span class="price-20"> {{product.price |  money }} </span>
                                    <span class="comp-price-20"> {{product.compare_at_price |  money }} </span>
                                </div>
                            </div>
                        </div>
                    {% endfor %}

                </div>
            </div>
        </div>
    </div>

{% schema %}
{
    "name": "Sticky Collection",
    "settings": [
        {
            "type": "collection",
            "id": "collection",
            "label": "Collection"
        }
        ],
        "presets": [
            {
                "name": "Sticky Collection"
            }
        ]
}
{% endschema %}