
    <style>

        *{
            padding: 0;
            margin: 0;
            box-sizing: border-box;
        }
        .main-collection-20{
            width: 100%;
            margin: 30px 0;
            padding: 20px 0;
        }
        .inner-collection-20{
            width: 90%;
            margin: 0 auto !important;
        }
        .row-collection-20{
            display: flex;
            justify-content: center;
            align-items: flex-start;
            gap: 20px;
            position: relative;
        }
        .c-20-col{
            width: 50%;
            border-radius: 20px;
        }
        .collection-20-col-fix{
            position: sticky;
            left: 0;
            top: 70px;
            max-height: 90vh;
            overflow: hidden;
        }
        .text-20-fix{
            position: absolute;
            width: 80%;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%);
            background: rgba(255, 255, 255, .7);
            padding: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
        }
        .collection-20-col-scroll{
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            gap: 50px;     
            background: #dff1ee;
        }
        .po-20-c{
            position: relative;
            height: 100%;
        }
        .img-20-fix{
            height: 100%;
            width: 100%;
        }
        .img-20-fix img{
            width: 100%;
            height: 100%;
            object-fit: contain;
            border-radius: 20px;
        }
        .main-20-product{
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            gap: 10px;
            width: 60%;
            padding: 30px 0;
            margin: 0 auto !important;
        }
        .img-20-product{
            position: relative;
            width: 100%;
            overflow: hidden;
            border-radius: 10px;
        }
        .product-20-btn{
            opacity: 0;
            position: absolute;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%);
        }
        .product-20-btn:hover{
            transform: translateY(-5px)translateX(-50%) !important;
        }
        .img-20-product img{
            height: 100%;
            width: 100%;
            object-fit: cover;
            border-radius: 10px;
        }
        .main-collection-20 .section-btn-20{
            display: block;
            width: 70%;
            padding: 10px 0;
            text-align: center;
            text-decoration: none;
            border-radius: 10px;
            background: #ffa18a;
            color: black;
            margin: 10px auto;
            transition: all .5s;
        }
        .main-20-product:hover  .product-20-btn{
            opacity: 1 !important;
        }
        .main-collection-20 .section-btn-20:hover{
            transform: translateY(-5px);
            box-shadow:0px 3px 6px 0 black;
        }
        @media (max-width:768px){
            .row-collection-20{
                flex-direction: column;
            }
            .c-20-col{
                width: 100%;
            }
            .collection-20-col-fix{
                position:relative!important;
                margin: 30px 0;
            }
            .collection-20-col-scroll{
                flex-direction: row;
                justify-content: flex-start;
                overflow: auto;
                padding: 20px;
                position: relative;
            }
            .main-20-product{
                min-width: 300px;
            }
            #shopify-section-{{ section.id }} .arrow-20{
                opacity: 1 !important;
            }
        }
        #shopify-section-{{ section.id }} .arrow-20 {
            position: absolute;
            width: 30px;
            height: 30px;
            border-radius: 50%;
            border: none;
            color: #fff;
            font-size: 24px;
            cursor: pointer;
            opacity: 0;
            z-index: 1;
            bottom: 25%;
            background: rgba(255, 255, 255, 0.7);
            box-shadow: 0 1px 3px 0px black;
        }
        #shopify-section-{{ section.id }} .next-arrow-20{
            right: 30px;
        }
        #shopify-section-{{ section.id }} .prev-arrow-20{
            left: 30px;
        }
        .pos-rel-20{
            position: relative;
        }
    </style>
    
    <div class="main-collection-20">
        <div class="inner-collection-20">
            {% assign collection = section.settings.collection %}
            <div class="row-collection-20">
                <div class="collection-20-col-fix c-20-col">
                    <div class="po-20-c">
                    <div class="img-20-fix">
                        <img src="{{ collection.featured_image |  img_url: 'master' }}" alt="">
                        </div>
                    <div class="text-20-fix">
                        <h1> {{collection.title}} </h1>
                        <p> {{ collection.description }} </p>
                        <a class="section-btn-20" href="{{ collection.url }}">SHOP ALL PRODUCTS</a>
                    </div>
                    </div>
                </div>
                <div class="c-20-col pos-rel-20">
                <div class="collection-20-col-scroll" id="slider-20">
                    {% for product in collection.products %}
                        <div class="main-20-product">
                            <a href="{{ product.url }}">
                            <div class="img-20-product">
                                <img src="{{ product.featured_image |  img_url: 'master' }}" alt="">
                                <a class="product-20-btn section-btn-20" href="{{ product.url }}">VIEW PRODUCT</a>
                            </div>
                            <div class="content-20-product">
                                <h3> {{product.title}} </h3>
                                <div class="price-20">
                                    <span class="price-20"> {{product.price |  money }} </span>
                                    <span class="comp-price-20"> {{product.compare_at_price |  money }} </span>
                                </div>
                            </div>
                            </a>
                        </div>
                    {% endfor %}
                        
                        </div>
                      
                </div>
                <div class="slider-20-btn">
                    <button class="arrow-20 next-arrow-20">
                        <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewBox="0 0 24 24"><path d="M10.707 17.707 16.414 12l-5.707-5.707-1.414 1.414L13.586 12l-4.293 4.293z"/></svg>
                    </button>
                    <button class="arrow-20 prev-arrow-20">
                        <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewBox="0 0 24 24"><path d="M13.293 6.293 7.586 12l5.707 5.707 1.414-1.414L10.414 12l4.293-4.293z"/></svg>
                    </button> 
                </div>
            </div>
        </div>
    </div>

        
    <script>
    (function() {
        const slider = document.getElementById('slider-20');
        const prevArrow = document.querySelector('.prev-arrow-20');
        const nextArrow = document.querySelector('.next-arrow-20');
        const slideWidth = document.querySelector('.main-20-product').offsetWidth + 30; // including 20px gap

        function scrollSlider(direction) {
            const scrollAmount = direction * slideWidth;
            slider.scrollBy({
                top: 0,
                left: scrollAmount,
                behavior: 'smooth'
            });
        }

        prevArrow.addEventListener('click', () => {
            scrollSlider(-1);
        });

        nextArrow.addEventListener('click', () => {
            scrollSlider(1);
        });
    })();
</script>

    

{% schema %}
