<style>
.main-c-20{
    width: 100%;
    margin: 30px 0;
    padding: 30px 20px;
}
.inner-c-20{
    width: 90%;
    margin: 0 auto !important;
    display: flex;
    align-items: flex-start;
    justify-content: center;
    gap: 30px;
}
.collection-c-20{
    width: 30%;
    max-width: 400px;
    max-height:400px ;
}
.img-20{
    width: 100%;
    height: 100%;
    border-radius: 50%;
    overflow: hidden;
    margin: 0 0 10px;
}
.img-20 img{
    width: 100%;
    height: 100%;
    border-radius: 50%;
    object-fit: cover;
    transition: all .4s;
}
.img-20 img:hover{
    transform: scale(1.03);
}
.collection-c-20 h2{
    text-align: center;
    color: black;
}
.collection-c-20 a{
    text-decoration: none;
}
</style>


<div class="main-c-20">
    <div class="inner-c-20">
        
    {%  for block in section.blocks %}
        {% assign collection = block.settings.s-collection %}  
        <div class="collection-c-20">
            <div class="img-20">
                <img src="{{ collection.featured_image |  img_url:'master' }}" alt="">
            </div>
            <div class="title-20">
               <a href="{{ collection.url }}"> <h2> {{ collection.title }} </h2> </a>
            </div>
        </div>
    {% endfor %}
</div>
</div>


{% schema %}
{
    "name": "Simple Collection",
    "settings": [
        
        ],
        "blocks": [
            {
                "type": "collection",
                "name": "collection",
                "limit": 3,
                "settings": [
                    {
                        "type": "collection",
                        "id": "s-collection",
                        "label": "Choose collection"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "simple collection"
            }
        ]
}
{% endschema %}